{
  "permissions": {
    "allow": [
      "Bash(vercel ls:*)",
      "Bash(npx vercel@latest ls:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "exa",
    "browser",
    "context7",
    "desktop-commander"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \".claude/hooks/dashboard-bridge.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \".claude/hooks/dashboard-bridge.js\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \".claude/hooks/dashboard-bridge.js\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \".claude/hooks/dashboard-bridge.js\""
          }
        ]
      }
    ]
  }
}
